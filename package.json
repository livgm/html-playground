{
  "name": "simple-codeplayground",
  "version": "4.0.0",
  "description": "Playground with templates, autoâ€‘save, resizable panes, JS toggle, asset list & export ZIP",
  "main": "server.js",
  "scripts": {
    "build:ui": "esbuild public/app.js --bundle --format=esm --outfile=public/bundle.js --minify",
    "start": "node server.js",
    "watch:ui": "esbuild public/app.js --bundle --outfile=public/bundle.js --watch",
    "watch:server": "nodemon server.js",
    "dev": "concurrently \"npm:watch:ui\" \"npm:watch:server\"",
    "postinstall": "npm run build:ui"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.3",
    "adm-zip": "^0.5.10",
    "archiver": "^5.3.1",
    "codemirror": "^6.0.1",
    "express": "^4.18.2",
    "live-server": "^1.2.2",
    "multer": "^1.4.5-lts.2",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.25.3",
    "nodemon": "^3.0.2"
  }
}
